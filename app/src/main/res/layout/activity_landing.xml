<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landing"
    android:background="@color/backgroundPrimary">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon_little"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:id="@+id/imPhoto"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_alignParentBottom="true"

        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/background"
            android:scaleType="fitEnd"
            android:scaleX="1.2"
            android:tint="#eaf4f8"

            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="The easiest \nway to accept\npayments"
        android:textColor="@color/textPrimary"
        android:layout_below="@id/imPhoto"
        android:paddingLeft="30dp"
        android:paddingTop="25dp"
        android:id="@+id/textlanding"
        />
    <ImageView
        android:layout_width="313dp"
        android:layout_height="426dp"
        android:src="@drawable/credit_card"
        android:layout_below="@id/textlanding"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-110dp"
        />
    <Button
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:background="@drawable/signupbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:text="Sign up"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signupbutton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:layout_centerHorizontal="true"
        android:textColor="#568899"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textSize="14sp"
        android:id="@+id/landinglogin"
        />
    
</RelativeLayout>